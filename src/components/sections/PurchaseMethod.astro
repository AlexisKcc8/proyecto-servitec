---
import LinkButton from "@components/LinkButton.astro";
import ContainerCenter from "@components/ContainerCenter.astro";
import { Image } from "astro:assets";
import imgAvatar from "@assets/hero/lichos-without-bg.png";

let purchaseMethod = ["Selecciona tu producto.", "Contacta con nosotros por WhatsApp.", "Selecciona el método de pago (efectivo/transferencia).", "Envia el comprobante de pago en caso de ser transferencia.", "Recibe tu producto u obtener en sucursal."];
---

<section class="flex justify-center items-center w-full min-h-full">
  <ContainerCenter>
      <h2 class="text-[2rem] font-semibold tracking-tight leading-none laptop:text-[3.5rem]">
          Nuestro método de compra.
      </h2>
      <h4 class="text-[1.1rem] text-gray-700 laptop:text-[1.5rem]">
          Experiencia online o en sucursal.
      </h4>

      <section class="flex flex-wrap w-[100%] laptop:mt-10 laptop:px-24 ">
        <aside class="w-[100%]  laptop:w-[50%] my-10 laptop:my-0 ">
          <article class="flex flex-col relative gap-8 px-4">

            <div class="w-[3px] absolute left-[29px] top-[12px] h-[90%] -z-10 bg-servitec-800"></div>

            {purchaseMethod !== null
              ? purchaseMethod.map((item, index) => (
                  <div
                    class="flex items-center text-lg gap-4"
                  >
                    <div class="rounded-full h-7 w-7 min-h-7 min-w-7 text-[18px] font-black flex items-center justify-center bg-servitec-900 text-white">
                      {index + 1}
                    </div>
                    <span class="text-gray-700 font-semibold leading-none text-[20px]">
                      {item}
                    </span>
                  </div>
                ))
              : null}
          </article>

          <LinkButton url="https://drive.google.com/file/d/11hThknDbDiQxv5wgVwM1dPBEbYelLlCr/view?usp=drive_links" className="mt-12 ml-4 justify-start">
              ✨ Tenemos justo lo que estás buscando.
          </LinkButton>

          <p class="mt-2 ml-4 text-sm  text-slate-500">
              Productos originales y de alta calidad.
          </p>
        </aside>

        <aside class="w-[100%] laptop:w-[50%] flex flex-col justify-center items-center text-center laptop:text-left">
          <p class="relative text-[20px] text-primary font-semibold max-w-[25rem] leading-tight text-slate-500 prose">
              Alternativamente, en caso de no encontrar el producto deseado en
              nuestro catalogo, puedes preguntar por medio de WhatsApp sin
              ningún compromiso.
          </p>
          <Image
              src={imgAvatar}
              alt="Avatar Servitec"
              class="object-contain w-[60%] h-full "
          />
        </aside>
      </section>
</ContainerCenter>
</section>