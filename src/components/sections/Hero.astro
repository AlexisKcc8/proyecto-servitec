---
import ContainerCenter from "@components/ContainerCenter.astro";
import { Image } from "astro:assets";
// import imgLichos from "@assets/hero/img-servitec1.png"
import imgLichos from "@assets/hero/lichos-without-bg.png";
import phoneGradient from "@assets/hero/Gradient-Smartphone.png";
import audifonos from "@assets/hero/audifonos.png";
import teclado from "@assets/hero/teclado.png";
import mouse from "@assets/hero/Mouse.png";
import laptop from "@assets/hero/laptop-white.png";
import camara from "@assets/hero/camara.png";
import logoServitec from "@assets/hero/logo-servitec-tornillo.png";
import { twMerge } from "tailwind-merge";
import LinkButton from "@components/LinkButton.astro";

let imagesAbsolute = [
  //LADO DERECHO
  {
    src: teclado,
    alt: "img-teclado",
    class: "top-0 -left-1/5 laptop:top-1/4 laptop:left-0",
    aosAnimate: "fade-right",
  },
  {
    src: mouse,
    alt: "img-mouse",
    class: "top-1/5 -left-1/5 laptop:top-7/12 laptop:left-0",
    aosAnimate: "fade-right",
  },
  {
    src: camara,
    alt: "img-mouse",
    class: "top-3/5 -left-1/5 laptop:top-2/3 laptop:left-2/12",
    aosAnimate: "fade-right",
  },

  //LADO IZQUIERDO
  {
    src: phoneGradient,
    alt: "img-phone-gradient",
    class: "top-0 -right-1/5 laptop:top-1/4 laptop:right-0",
    aosAnimate: "fade-left",
  },
  {
    src: laptop,
    alt: "img-laptop",
    class: "top-[20%] -right-1/5 laptop:top-7/12 laptop:right-0",
    aosAnimate: "fade-left",
  },
  {
    src: audifonos,
    alt: "img-audifonos",
    class: "top-3/5 -right-1/5 laptop:top-2/3 laptop:right-2/12",
    aosAnimate: "fade-left",
  },
];
---

