---
import ButtonLinkWhatsApp from "@components/ButtonLinkWhatsApp.astro";
import ContainerCenter from "@components/ContainerCenter.astro";
import { ourServices } from "@data/dataOurServices";
import { Image } from "astro:assets";
---

<section
  id="OurServices"
  class="flex flex-col justify-center items-center bg-servitec-graySection"
>
  <ContainerCenter>
    <header class="text-center">
      <h2
        class="text-4xl font-semibold tracking-tight leading-none laptop:text-6xl"
        data-aos="fade"
      >
        Nuestros servicios tecnológicos
      </h2>
      <h4 class="text-xl text-gray-700 laptop:text-2xl mt-2" data-aos="fade">
        El soporte que necesitas, con la calidad que mereces.
      </h4>
    </header>
  </ContainerCenter>
  {
    ourServices.map((service, index) => (
      <div
        class="relative w-[90%]  flex justify-center items-center mb-8"
        data-aos="fade"
      >
        <ContainerCenter
          class="h-full bg-white rounded-2xl flex flex-col items-center justify-center text-center overflow-visible laptop:py-4 "
          class:list={{
            "laptop:flex-row": index % 2 === 0, // índice par
            "laptop:flex-row-reverse": index % 2 !== 0, // índice impar
          }}
        >
          <aside class="laptop:w-1/2 h-full overflow-visible">
            <Image
              src={service.image}
              alt={`Image of ${service.name}`}
              class="w-full h-full object-cover object-center "
            />
          </aside>
          <aside class="laptop:w-1/2 flex flex-col items-center justify-center">
            <span class="text-xl font-semibold bg-gradient-to-r from-sky-500 via-purple-500 to-orange-500 text-transparent bg-clip-text mt-4">
              {service.subtitle}
            </span>
            <h4 class="text-3xl font-bold laptop:text-5xl">{service.name}</h4>
            <p class="text-gray-600 text-center my-4 prose laptop:text-xl">
              {service.description}
            </p>

            <ButtonLinkWhatsApp
              className="px-8 py-4 text-white font-semibold bg-gradient-to-r from-sky-400 via-indigo-500 to-purple-500 hover:opacity-90 transition-all duration-300 shadow-md"
              message={service.messageService}
              title={service.titleBtnAction}
            />
          </aside>
        </ContainerCenter>
      </div>
    ))
  }
</section>
