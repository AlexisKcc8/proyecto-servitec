---
import Carousel from "@components/Carousel.astro"
import CardIncentive from "@components/CardIncentive.astro"
import {incentives} from "@data/incentives"
---
<section class="text-center my-4 bg-[#f5f5f7] pt-12">
      <header class="text-start laptop:w-[80%] m-auto px-5 laptop:p-0">
        <h2 class=" text-[2rem] font-semibold tracking-tight leading-none laptop:text-[3.5rem]">
            Descubre por qué somos el mejor lugar para comprar tus productos
            electrónicos.
          </h2>
      </header>

      <Carousel carouselId="incentives-carousel" class="gap-4">
        {incentives.map((incentive) => (
              <CardIncentive incentive={incentive} />
          ))}
      </Carousel>
</section>