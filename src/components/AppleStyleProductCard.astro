---
import { Image } from "astro:assets";
import ButtonLinkWhatsApp from "./ButtonLinkWhatsApp.astro";

const { productData } = Astro.props;
const { image, name, oldPrice, price } = productData;
const imageUrl = `https://servitec-halacho.netlify.app${image}`; // URL de la imagen en la carpeta public

