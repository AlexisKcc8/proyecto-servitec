---
import { Icon } from "astro-icon/components";

const { incentive } = Astro.props;
const { title, description, icon } = incentive;
---

<article
  class="flex flex-col cursor-pointer bg-white hover:shadow-lg transition-shadow duration-300 w-96 h-80 text-start p-6 snap-center flex-shrink-0 rounded-2xl border border-gray-200"
  data-aos="fade-up"
  data-aos-offset="120"
  aria-labelledby={`incentive-title-${title.replace(/\s+/g, "-").toLowerCase()}`}
  role="group"
>
  <header class="flex flex-col space-y-1.5">
    <Icon
      name={icon}
      class="h-12 w-24 text-primary mb-2"
      aria-hidden="true"
      focusable="false"
    />
    <h3
      id={`incentive-title-${title.replace(/\s+/g, "-").toLowerCase()}`}
      class="text-2xl font-semibold leading-none tracking-tight flex flex-col items-start justify-center gap-2"
    >
      {title}
    </h3>
  </header>

  <section class="pt-0 flex-grow relative my-4">
    <p class="text-base text-gray-600">{description}</p>
  </section>

  <footer class="flex gap-1" aria-label="ValoraciÃ³n con estrellas">
    {
      Array.from({ length: 5 }).map((_, index) => (
        <Icon name="star" class="h-6 w-6 text-yellow-400" aria-hidden="true" />
      ))
    }
  </footer>
</article>
