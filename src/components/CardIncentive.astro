---
import { Icon } from "astro-icon/components";

const { incentive } = Astro.props;
const { title, description, icon } = incentive;
---
<div class="flex flex-col cursor-pointer bg-white hover:shadow-lg transition-shadow duration-300  w-[23rem] h-[22rem] text-start p-6 snap-center flex-shrink-0 rounded-2xl border-none">
      <header class="flex flex-col space-y-1.5">
         <Icon name={icon} class="h-12 w-24 text-primary mb-2" />
         <h3 class="text-2xl font-semibold leading-none tracking-tight flex flex-col items-start justify-center gap-2">
           {title}
         </h3>
      </header>
      <section class="pt-0 flex-grow relative my-4">
        <p class="text-muted-foreground text-base text-gray-600">{description}</p>
      </section>
      <footer class="flex gap-1">
        <!-- <div>⭐⭐⭐⭐⭐</div> -->
         <Icon name="star" class="h-8 w-8" />
         <Icon name="star" class="h-8 w-8" />
         <Icon name="star" class="h-8 w-8" />
         <Icon name="star" class="h-8 w-8" />
         <Icon name="star" class="h-8 w-8" />
      </footer>
</div>